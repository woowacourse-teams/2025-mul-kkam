<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.settingnickname.SettingNicknameActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_setting_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:contentInsetStart="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"
            android:importantForAccessibility="no"
            android:padding="12dp"
            android:src="@drawable/ic_setting_prev" />

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/setting_nickname_toolbar_title"
            android:textAppearance="@style/title2"
            android:textColor="@color/gray_400" />
    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/view_toolbar_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_setting_profile" />

    <TextView
        android:id="@+id/tv_edit_nickname_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/setting_nickname_edit_nickname_label"
        android:textAppearance="@style/title2"
        android:textColor="@color/gray_400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_toolbar_divider" />

    <EditText
        android:id="@+id/et_input_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_common_rectangle_stroke_8dp"
        android:backgroundTint="@color/gray_400"
        android:hint="@string/setting_nickname_hint_input_nickname"
        android:imeOptions="actionDone|flagNoEnterAction"
        android:inputType="text"
        android:maxLength="11"
        android:maxLines="1"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:textAppearance="@style/body2"
        android:textColor="@color/gray_400"
        android:textColorHint="@color/gray_300"
        app:layout_constraintEnd_toStartOf="@id/btn_check_duplicate"
        app:layout_constraintStart_toStartOf="@id/tv_edit_nickname_label"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_nickname_label" />

    <TextView
        android:id="@+id/btn_check_duplicate"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/selector_common_button_enabled"
        android:gravity="center"
        android:paddingHorizontal="14dp"
        android:text="@string/setting_nickname_check_duplicate"
        android:textAppearance="@style/title3"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/et_input_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_input_nickname"
        app:layout_constraintTop_toTopOf="@id/et_input_nickname" />

    <TextView
        android:id="@+id/tv_nickname_validation_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/label1"
        android:textColor="@color/secondary_200"
        app:layout_constraintStart_toStartOf="@id/et_input_nickname"
        app:layout_constraintTop_toBottomOf="@id/et_input_nickname"
        tools:text="@string/setting_nickname_warning_duplicated_nickname" />

    <TextView
        android:id="@+id/tv_save_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@drawable/selector_common_button_enabled"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text="@string/setting_save"
        android:textAppearance="@style/title2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
