<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_common_rectangle_14dp">

    <ImageView
        android:id="@+id/iv_logout_warning_sign"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_alert_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_logout_confirm_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/setting_account_info_logout_label"
        android:textAppearance="@style/title1"
        android:textColor="@color/gray_400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logout_warning_sign" />

    <TextView
        android:id="@+id/tv_logout_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/bg_common_rectangle_8dp"
        android:backgroundTint="@color/primary_100"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="@string/setting_account_info_confirm"
        android:textAppearance="@style/body4"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_logout_cancel"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_logout_confirm_label"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_logout_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/gray_50"
        android:background="@drawable/bg_common_rectangle_8dp"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="@string/setting_account_info_cancel"
        android:textAppearance="@style/body4"
        android:textColor="@color/gray_400"
        app:layout_constraintBottom_toBottomOf="@id/tv_logout_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_logout_confirm"
        app:layout_constraintTop_toTopOf="@id/tv_logout_confirm" />
</androidx.constraintlayout.widget.ConstraintLayout>
