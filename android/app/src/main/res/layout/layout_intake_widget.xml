<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_intake_widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_common_rectangle_12dp"
    android:backgroundTint="@color/white_widget_bg"
    android:paddingVertical="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="18dp">

        <FrameLayout
            android:layout_width="78dp"
            android:layout_height="78dp">

            <ImageView
                android:id="@+id/iv_donut_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_character"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:src="@drawable/img_widget_character" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="14dp"
            android:paddingEnd="14dp">

            <TextView
                android:id="@+id/tv_title_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/title2"
                android:textColor="@color/gray_400"
                tools:text="8월 18일의 목표" />

            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textAppearance="@style/body5"
                android:textColor="@color/gray_400"
                tools:text="700 ml  /  1,200 ml" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingStart="0dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp">

            <FrameLayout
                android:id="@+id/ll_drink"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="start|top"
                android:background="@drawable/bg_common_rectangle_10dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:foreground="@drawable/bg_common_rectangle_stroke_10dp"
                android:foregroundTint="@color/gray_300">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_home_drink" />

                <ImageView
                    android:id="@+id/iv_drink_icon"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center"
                    tools:src="@drawable/ic_home_drink" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginStart="6dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="-8dp"
                android:layout_marginBottom="-6dp"
                android:background="@drawable/bg_common_rectangle_4dp"
                android:backgroundTint="@color/black"
                android:paddingHorizontal="4dp"
                android:paddingVertical="2dp"
                android:text="@string/setting_cup_representative"
                android:textAppearance="@style/label2"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
