<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipChildren="false"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/tv_home_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="@string/home_label"
        android:textAppearance="@style/headline1"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_streak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:textAppearance="@style/title2"
        android:textColor="@color/gray_400"
        app:layout_constraintStart_toStartOf="@id/tv_home_label"
        app:layout_constraintTop_toBottomOf="@id/tv_home_label"
        tools:text="환노님은 물 마시기 120일 째" />

    <com.mulkkam.ui.custom.progress.LinearGradientProgressBarView
        android:id="@+id/pb_home_water_progress"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_streak" />

    <TextView
        android:id="@+id/tv_daily_intake_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textAppearance="@style/title3"
        app:layout_constraintEnd_toEndOf="@id/pb_home_water_progress"
        app:layout_constraintTop_toBottomOf="@id/pb_home_water_progress"
        tools:text="100ml / 1,200ml" />

    <ImageView
        android:id="@+id/iv_home_notification"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_home_notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_alarm_count"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_common_circle"
        android:backgroundTint="@color/secondary_200"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textAppearance="@style/label2"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/iv_home_notification"
        app:layout_constraintTop_toTopOf="@id/iv_home_notification"
        tools:text="2" />

    <ImageView
        android:id="@+id/iv_home_character"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="62dp"
        android:src="@drawable/img_home_character"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_confetti"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_home_character"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_applyOpacityToLayers="false"
        app:lottie_autoPlay="false"/>

    <TextView
        android:id="@+id/tv_home_character_chat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="18dp"
        android:textAlignment="center"
        android:textAppearance="@style/title2"
        android:textColor="@color/gray_400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_home_character" />

    <com.mulkkam.ui.custom.floatingactionbutton.ExtendableFloatingActionButton
        android:id="@+id/fab_home_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
